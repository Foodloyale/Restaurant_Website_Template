@model IEnumerable<restaurant_demo_website.Models.Product>

@{
    ViewData["Title"] = "Menu";
}

<div>
    <ul style="list-style-type:none;">
    @foreach(Product p in Model)
    {
        <li>
            <a href="@Url.Action("Details","Menu",new {id= p.ProductID})">
            <img src="@Url.Content(p.imgUrl)" alt="@p.Name" style="height:200px;width:200px"/>
            <p>@p.Name</p>
            <p>@String.Format("{0:F}", @p.Price)</p>
            @Html.ActionLink("Add to Cart","AddToCart","ShoppingCart",new{id=p.ProductID}, new{@class="btn btn-primary"})
            </a>
        </li>
    }
    </ul>
</div>


